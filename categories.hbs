<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Categories</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <header>
        <h1>Categories</h1>
        <a href="/addcategories" class="btn btn-success pull-right">Add Category</a>
    </header>
    {{#if message}}
        <div class="alert alert-warning">
            {{message}}
        </div>
    {{/if}}
    {{#if Categories.length}}
        <table class="table">
            <thead>
                <tr>
                    <th>Category</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each Categories}}
                    <tr>
                        <td>{{category}}</td>
                        <td>
                            <a href="/categories/delete/{{id}}" class="btn btn-danger">Remove</a>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{/if}}
</body>
</html>
