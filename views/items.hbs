<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Items</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <header>
        <h1>Items</h1>
        <form action="/additem" method="GET">
            <button type="submit" class="btn btn-primary">Add Item</button>
        </form>
    </header>
    {{#if message}}
        <div class="alert alert-warning">
            {{message}}
        </div>
    {{/if}}
    {{#if Items.length}}
        <table class="table">
            <thead>
                <tr>
                    <th>ItemID</th>
                    <th>Title</th>
                    <th>Category</th>
                    <th>PostDate</th>
                    <th>Price</th>
                    <th>Image</th>
                    <th>Published</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each Items}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.title}}</td>
                        <td>{{this.categoryId}}</td>
                        <td>{{this.postDate}}</td>
                        <td>{{this.price}}</td>
                        <td><img src="{{this.featuredimage}}" alt="Image" width="100"></td>
                        <td>{{this.published}}</td>
                        <td>
                            <a href="/Items/delete/{{this.id}}" class="btn btn-danger">Remove</a>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{/if}}
</body>
</html>
